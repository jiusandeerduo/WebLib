@import "../../../../style/project/my_index_base.wxss";
 
 

.main .upside {
	background-color: var(--projectCompareColor);
	height: 400rpx;
	width: 100%;
	display: flex;
	align-items: flex-end;
	justify-content: center;
	border-bottom-left-radius: 100rpx;
	padding: 0 0 80rpx 0;
	position: relative;
	overflow: hidden; 
	border-bottom: 10rpx solid var(--projectColor);
}

.main .upside .upImg {
	border-bottom-left-radius: 100rpx; 
	border-bottom: 10rpx solid var(--projectColor);
}

.main .upside .user-bar .detail .desc { 
    color: #000;
}

.main .upside .user-bar .detail .name {
	color: #000;
}